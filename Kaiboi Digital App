public void registerUser(String username, String password, String fullName, String class) {
    // Validate username and password
    if (!validateUsername(username) || !validatePassword(password)) {
        return;
    }
    // Hash and salt password
    String hashedPassword = BCrypt.hashpw(password, BCrypt.gensalt());
    // Create user object
    User user = new User(username, hashedPassword, fullName, class);
